@using NETCORE_Lesion01_MVC.Models;
@{
    ViewData["Title"] = "List Product";
    List<Product> products = ViewBag.Products;
}
<h2>List Product</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>

        </tr>
    </thead>
    @foreach(var product in products)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
        </tr>
    }
</table>
