@{
    var product = ViewBag.Product;
}
<h2>Chi Tiết Sản Phẩm</h2>
<div class="row">
    <div class="col-md-4">
        <img width="100%" src="@Url.Content(product.Image)" />
    </div>
    <div class="col-md-8">
        <h2>Tên sản phẩm: @product.Name</h2>
        <h3>Mô tả: @product.Description</h3>
        <h3>Giá: @product.Price</h3>
     
        <p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-danger">Back to list</a>
        </p>
    </div>
</div>